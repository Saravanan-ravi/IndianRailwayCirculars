<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      card_view:cardPreventCornerOverlap="false"
      app:cardPreventCornerOverlap="false"
      app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:background="#292826"
      android:layout_width="wrap_content"
      android:layout_height="match_parent">

      <TextView
          android:id="@+id/cirNum"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_marginStart="23dp"
          android:layout_marginLeft="23dp"
          android:layout_marginTop="10dp"
          android:padding="5dp"
          android:textColor="#ffde00"
          android:textSize="20sp"
          android:textStyle="bold|italic" />



      <TextView
        android:id="@+id/cirName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/cirNum"
          android:textColor="#fff"
        android:padding="5dp"
        android:textSize="20sp"
        android:textStyle="bold|italic" />


<!--
      <Button
        android:id="@+id/btnShare"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cirName"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/btnOpen"
        android:layout_toRightOf="@+id/btnOpen"
        android:text="Share" />-->


      <TextView

          android:id="@+id/tvDate"
          style="?android:attr/borderlessButtonStyle"
          android:layout_width="107dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/cirName"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginTop="25dp"
          android:layout_marginEnd="314dp"
          android:layout_marginRight="314dp"
          android:textColor="#f9d342" />

      <ImageButton
          android:id="@+id/btnShare"
          style="?android:attr/borderlessButtonStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/cirName"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_marginStart="312dp"
          android:layout_marginLeft="312dp"
          android:layout_marginTop="30dp"
          android:src="@drawable/ic_menu_share"/>


      <!--<ImageButton
          android:id="@+id/iv_favorite"
          android:layout_width="44dp"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@id/cirName"
          android:layout_marginLeft="270dp"
          android:layout_marginBottom="-64dp"
          android:background="#fff"
          android:adjustViewBounds="true"
          android:scaleType="fitCenter"
          android:src="@drawable/fav_icon"/>-->

      <CheckBox
          android:id="@+id/like_button_cb"
          android:layout_width="42dp"
          android:layout_height="38dp"
          android:layout_alignBottom="@id/cirName"
          android:layout_marginLeft="270dp"
          android:layout_marginBottom="-73dp"
          android:background="@drawable/like_button_background"
          android:button="@null"
          android:gravity="center"
          android:padding="3dp"
          android:textSize="12sp"
          android:theme="@style/checkBoxStyle"
          android:visibility="visible" />



    </RelativeLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>