<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"

    android:orientation="vertical"
    tools:context=".IndianCommercialMenu"
    >


    <include
        android:id="@+id/app_bar_for_ir"
        layout="@layout/year_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/bt_lap"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="25dp"
                android:background="@drawable/button_ripple"
                android:text="LAP FORM"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#fff"
                app:backgroundTint="#FFC300" />

            <Button
                android:id="@+id/bt_cl"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textColor="#fff"
                android:backgroundTint="#FFC300"
                android:background="@drawable/button_ripple"
                android:padding="25dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="CASUAL LEAVE FORM"
                />

            <Button
                android:id="@+id/bt_holidayhome"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="25dp"
                android:text="HOLIDAY HOME APPLICATION"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/button_ripple"
                android:textColor="#fff"
                app:backgroundTint="#FFC300" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>